

import os ;

if [ os.name ] = NT
{
    exe device_notification
    :
        device_notif_impl.cpp
        main.cpp
    :
      <include>.
      <link>static
      <toolset>msvc:<linkflags>User32.lib 
      <define>USE_PTHREADS    
      <location>./
    ;
}

else
{
    exe device_notification
    :
        device_notif_impl.cpp
        main.cpp
    :
      <include>.
      <define>USE_PTHREADS
      <link>static
      <linkflags>-lusb
      <linkflags>-ludev

      <location>./
    ;
}

